{% extends 'AppBundle:Default:User/Page/comments.html.twig' %}

{% block list %}
    
    {% for aComment in comments %}
        <div class="comment">
            
            <div class="text">
                {{ aComment.text|raw }}
            </div>
            
            {# Info about this comment #}
            <div class="commentInfo">
                <div class="community">
                    <img class="picture" alt="" title="" src="{{ url('freepost_community_picture', {'communityHashId': aComment.post.community.hashId}) }}" />
                    <a class="none" target="_self" href="{{ path('freepost_community', {'communityName': aComment.post.community.name}) }}">
                        {{ aComment.post.community.name }}
                    </a>
                    <br />
                    {# http://php.net/manual/en/function.date.php #}
                    {{ aComment.created|date("H:i M, jS") }}
                </div>
                
                <a class="none post" target="_blank" href="{{ path('freepost_post', {'communityName': aComment.post.community.name, 'postHashId': aComment.post.hashId, 'postTitle': aComment.post.title}) }}">
                    {{ aComment.post.title }}
                </a>
            </div>
        </div>
    {% endfor %}
    
{% endblock %}














