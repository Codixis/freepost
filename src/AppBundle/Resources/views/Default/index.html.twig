<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>

	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    
    {% image '@AppBundle/Resources/public/images/favicon.png' %}
        <link rel="shortcut icon" type="image/png" href="{{ asset_url }}"/>
    {% endimage %}

	<title>{% block title %}{% endblock %}</title>

	{% block stylesheet %}
            
        {% stylesheets
            '@AppBundle/Resources/public/css/main.css'
            '@AppBundle/Resources/public/css/postsList.css'
            '@AppBundle/Resources/public/css/ui-lightness/jquery-ui-1.10.4.custom.min.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
            
	{% endblock %}

	{% block javascript %}
            
        {% javascripts
            '@AppBundle/Resources/public/js/jquery.js'
            '@AppBundle/Resources/public/js/jqueryui.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
        
        {# CKEditor JS file must be linked here and not using assetic, because it uses the
           public path to retrieve all files (skins, plugins, etc.)
        #}
        <script type="text/javascript" src="{{ asset('bundles/app/js/ckeditor/ckeditor.js') }}"></script>
    
    {% endblock %}

</head>
<body>

	{% block body %}{% endblock %}

	{# Piwik statistics # }
	<script type="text/javascript">
		var _paq = _paq || [];
		_paq.push(["setCookieDomain", "*.getpeers.com"]);
		_paq.push(["trackPageView"]);
		_paq.push(["enableLinkTracking"]);
		_paq.push(["setTrackerUrl", "http://a.getpeers.com/t.php"]);
		_paq.push(["setSiteId", "1"]);
	</script>
	<script type="text/javascript" defer="defer" async="async" src="http://a.getpeers.com/t.js"></script>
    #}
    
</body>
</html>
